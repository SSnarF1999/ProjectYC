<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:outlineAmbientShadowColor="@color/colorAccent"
    tools:context=".Tonights_recipeActivity"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="368dp"
        android:layout_height="377dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/ibRecipe01"
            android:layout_width="186dp"
            android:layout_height="186dp"
            android:background="@android:color/black"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageButton
            android:id="@+id/ibRecipe02"
            android:layout_width="184dp"
            android:layout_height="186dp"
            android:background="?attr/colorPrimary"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@mipmap/ic_eat" />

        <ImageButton
            android:id="@+id/ibRecipe03"
            android:layout_width="186dp"
            android:layout_height="186dp"
            android:background="?attr/colorPrimary"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@mipmap/ic_eat" />

        <ImageButton
            android:id="@+id/ibRecipe04"
            android:layout_width="186dp"
            android:layout_height="186dp"
            android:background="@android:color/black"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@mipmap/ic_eat" />
    </android.support.v7.widget.GridLayout>

    <TextView
        android:id="@+id/tScore01"
        android:layout_width="28dp"
        android:layout_height="37dp"
        android:layout_marginStart="149dp"
        android:layout_marginTop="142dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/gridLayout"
        app:layout_constraintTop_toTopOf="@+id/gridLayout" />

    <TextView
        android:id="@+id/tScore03"
        android:layout_width="28dp"
        android:layout_height="37dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="324dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/gridLayout"
        app:layout_constraintTop_toTopOf="@+id/gridLayout" />

    <TextView
        android:id="@+id/tScore02"
        android:layout_width="28dp"
        android:layout_height="37dp"
        android:layout_marginStart="332dp"
        android:layout_marginTop="140dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/gridLayout"
        app:layout_constraintTop_toTopOf="@+id/gridLayout" />

    <TextView
        android:id="@+id/tScore04"
        android:layout_width="28dp"
        android:layout_height="37dp"
        android:layout_marginStart="332dp"
        android:layout_marginTop="324dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/gridLayout"
        app:layout_constraintTop_toTopOf="@+id/gridLayout" />

    <TextView
        android:id="@+id/tCantvotemsg"
        android:layout_width="320dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:text=" "
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <Switch
        android:id="@+id/sAbsent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="60dp"
        android:checked="true"
        android:text="Available tonight"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

</android.support.constraint.ConstraintLayout>