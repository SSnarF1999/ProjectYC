<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".GroupChosenActivitiy">

    <Button
        android:id="@+id/bUsers"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="33dp"
        android:background="@android:color/background_dark"
        android:drawableStart="@android:drawable/ic_media_play"
        android:fallbackLineSpacing="false"
        android:shadowColor="@android:color/background_dark"
        android:shadowDx="100"
        android:shadowDy="100"
        android:shadowRadius="10"
        android:text="@string/users"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bChoose"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="34dp"
        android:background="@android:color/background_dark"
        android:drawableStart="@android:drawable/ic_media_play"
        android:text="@string/choose_recipe"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bUsers" />

    <ImageButton
        android:id="@+id/ibDiner"
        android:layout_width="286dp"
        android:layout_height="185dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="49dp"
        android:background="@android:color/background_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bChoose"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="117dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="114dp"
        android:text="Tonights Diner"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibDiner" />

</android.support.constraint.ConstraintLayout>